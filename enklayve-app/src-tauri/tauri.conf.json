{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "enklayve",
  "version": "0.1.0",
  "identifier": "com.user.enklayve",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Enklayve",
        "width": 1400,
        "height": 950,
        "minWidth": 1000,
        "minHeight": 700,
        "center": true,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "category": "Productivity",
    "shortDescription": "Secure, private AI-powered document analysis",
    "longDescription": "Enklayve is a secure, privacy-first desktop application for analyzing documents using local Large Language Models. Features end-to-end encryption, biometric authentication, and zero-knowledge architecture.",
    "copyright": "Copyright Â© 2025 Enklayve Contributors",
    "macOS": {
      "minimumSystemVersion": "10.15",
      "signingIdentity": "-",
      "entitlements": null,
      "exceptionDomain": null
    },
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": "http://timestamp.digicert.com"
    },
    "linux": {
      "deb": {
        "depends": []
      },
      "appimage": {
        "bundleMediaFramework": true
      }
    }
  },
  "plugins": {
    "updater": {
      "active": true,
      "endpoints": [
        "https://releases.enklayve.app/{{target}}/{{arch}}/{{current_version}}"
      ],
      "dialog": true,
      "pubkey": "TO_BE_GENERATED_BY_TAURI_CLI",
      "windows": {
        "installMode": "passive"
      }
    }
  }
}
